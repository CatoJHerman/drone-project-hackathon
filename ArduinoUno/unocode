const int SENSOR_PIN = A0;

void setup() {
  // 1. High Speed Serial
  // Ensure your Python code also has BAUD_RATE = 115200
  Serial.begin(115200); 
  
}

void loop() {
  // 2. Read Sensor
  int rawValue = analogRead(SENSOR_PIN);
  
  // 3. Send Number
  Serial.println(rawValue);
  
  // 4. Tiny Delay
  // Prevents flooding the Serial buffer on the computer side
  delay(5); 
}
